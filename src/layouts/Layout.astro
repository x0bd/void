---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import BlurCircle from '../components/shared/BlueCircle.astro'
import theme from "../data/theme"
import SEOTags from "../components/seo/SEOTags.astro"
import type { HeadTags } from "../utils/types/HeadTags"

import "../styles/tailwind.css";
import "../styles/post.css";
import "@fontsource-variable/inter"

export type Props = HeadTags;

const headTags = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <SEOTags {...headTags} />

  <body
    class="mx-auto flex min-h-screen max-w-[760px] flex-col gap-10 bg-neutral-900 px-10 py-4 text-sm text-neutral-200 md:gap-10 md:py-16"
  >
    <Header />
    <!-- <BlurCircle position="top" color={theme.colors.blur.top} />
    <BlurCircle position="bottom" color={theme.colors.blur.bottom} /> -->
    <slot />
    <style is:global>
      html {
        font-family: "Inter Variable";
      }
    </style>
     <Footer />
  </body>
</html>
