---
import type { Project } from "@/data/projects";

type Props = Project;

const { title, description, link, year } = Astro.props;
---

{
	(
		<a
			class="group flex w-full cursor-pointer flex-col justify-between gap-2 rounded-xl p-2 transition-all duration-300 hover:border-neutral-800 hover:bg-neutral-800"
			href={link}
			target="_blank"
			rel="noreferrer"
		>
			<div class="flex flex-row items-center gap-2">
				<p class="font-semibold text-neutral-200">{title}</p>
				<p class="flex-auto font-light text-neutral-400">
					{description}
				</p>
				<p class="font-mono font-light text-neutral-400">{year}</p>
			</div>
		</a>
	)
}
